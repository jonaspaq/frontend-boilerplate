{
	"env": {
		"browser": true,
		"commonjs": true,
		"node": true,
		"es6": true
	},
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error", "tab"
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-unused-vars": [
			"warn"
		],
		"no-mixed-spaces-and-tabs": [
			"error",
			"smart-tabs"
		],
		"no-extra-parens": [
			"warn"
		],
		"no-multiple-empty-lines": [
			"error", {
				"max": 2,
				"maxBOF": 2,
				"maxEOF": 1
			}
		],
		"no-var": [
			"error"
		],
		"prefer-const": [
			"error", {
				"destructuring": "all"
			}
		],
		"no-undef": [
			"error"
		]
	}
}
